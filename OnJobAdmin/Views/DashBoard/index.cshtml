@model Admin_Entity.Entity.AdminModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "index";
}

@if (@TempData["Message"] != null)
{
    <script type="text/javascript">
    $(document).ready(function () {

        if ('@TempData["Message"]' == "2") {
            toastr.success("Login Sucessfully!!");
        }
    });
    </script>
}
<!--main content start-->
<section id="main-content">

    <section class="content">
        <div class="row">
            <!--Total user -->
          
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-aqua"><i class="ion ion-ios-people-outline"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Users</span>
                        <span class="info-box-number">@Model.all_users</span>
                    </div>
                </div>
            </div>
            <!--Active user-->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-red"><i class="fa fa-shield"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Active Users</span>
                        <span class="info-box-number">@Model.all_active</span>
                    </div>
                </div>
            </div>
            <div class="clearfix visible-sm-block"></div>
            <!--Deavtive user-->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green"><i class="fa fa-window-close"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Deactive Users</span>
                        <span class="info-box-number">@Model.all_deactive</span>
                    </div>
                </div>
            </div>
            
            <!--Total employers-->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Companies</span>
                        <span class="info-box-number">@Model.all_company</span>
                    </div>
                </div>
            </div>
            <!--Active employers-->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-blue"><i class="fa fa-shield"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Active Companies</span>
                        <span class="info-box-number">@Model.all_active_cmp</span>
                    </div>
                </div>
            </div>
            <!--Deavtive employers-->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-red"><i class="fa fa-window-close"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Deactive Companies</span>
                        <span class="info-box-number">@Model.all_deactive_cmp</span>
                    </div>
                </div>
            </div>
        </div>
        <!--latest user-->
        <div class="row">
            <div class="col-md-6">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Latest Users</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table no-margin" style="font-size: 13px;">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Job Title</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.lstUser)
                                    {
                                        <tr>
                                            <td>@item.FirstName</td>
                                            <td><p>@item.Email</td>
                                            <td><p>@item.Job_title</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <div class="box-footer clearfix">
                        <a href="/User/Index" class="btn btn-sm btn-default btn-flat pull-right">View All Users</a>
                    </div>
                </div>
            </div>

            <!--latest jobs-->
            <div class="col-md-6">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Latest Company</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table no-margin" style="font-size: 13px;">
                                <thead>
                                    <tr>
                                        <th>Company</th>
                                        <th>Web Site</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.lstCompany)
                                    {
                                        <tr>
                                            <td>@item.Company_name</td>
                                            <td><p>@item.Web_site</td>
                                            @if (item.Is_active == 1)
                                            {
                                                <td><span class="label label-success">Active</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="label label-danger">Deactive</span></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="box-footer clearfix">
                        <a href="#" class="btn btn-sm btn-default btn-flat pull-right">View All Company</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>


